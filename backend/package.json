{
  "name": "zynk-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend for ZYNK food subscription app",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "npx dotenv -e .env -- drizzle-kit generate:pg",
    "db:push": "npx dotenv -e .env -- drizzle-kit push:pg",
    "setup:dev": "npm run db:generate && npm run db:push && npm run dev"
  },
  "keywords": [
    "express",
    "postgresql",
    "jwt",
    "drizzle"
  ],
  "author": "ZYNK Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.30.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.20.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
